<!-- res/drawable/toolbar_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dayActionBarColor" /> <!-- Change to desired background color -->
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" /> <!-- Shadow color -->
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>
